# Line ending normalization - enforce LF everywhere
* text=auto eol=lf

# Python files (explicitly LF)
*.py text eol=lf
*.pyi text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Config files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf

# Scripts
*.sh text eol=lf

# Windows batch files (exception - use CRLF)
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
